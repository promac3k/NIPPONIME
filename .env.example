# Exemplo de ficheiro .env para configurações sensíveis
# Copie este ficheiro para .env e preencha com os valores reais

# Chave secreta do Django (gere uma nova para produção)
SECRET_KEY=your-secret-key-here

# Configuração de desenvolvimento/produção
DEBUG=False

# Hosts permitidos (em produção, use o domínio específico)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Configurações de email
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
